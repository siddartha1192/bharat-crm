# Production Environment Variables for Bharat CRM
# Copy this file to .env.production and fill in your actual values

# Domain Configuration
DOMAIN=your-domain.com
SSL_EMAIL=your-email@example.com
FRONTEND_URL=https://your-domain.com

# Database Configuration
POSTGRES_DB=bharat_crm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-database-password-here

# pgAdmin Configuration (Database Management UI)
PGADMIN_EMAIL=admin@your-domain.com
PGADMIN_PASSWORD=your-strong-pgadmin-password

# JWT Secrets (generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# WhatsApp Business API
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_ID=your-whatsapp-phone-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Google OAuth & Calendar
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# Vector Database (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=  # Optional, for production security

# Application Configuration
NODE_ENV=production
PORT=3001

# API URL for frontend (MUST include /api suffix)
VITE_API_URL=https://your-domain.com/api

# Company Configuration
COMPANY_NAME=Your Company Name
COMPANY_OWNER_EMAIL=owner@your-domain.com
