# Database Connection
DATABASE_URL="postgresql://username:password@localhost:5432/bharat_crm?schema=public"

# Server Port
PORT=3001

# WhatsApp Business API Configuration
# Get these from Meta Business Suite: https://business.facebook.com
WHATSAPP_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id

# WhatsApp Webhook Configuration
# Set any secure random string - you'll need this when configuring webhook in Meta
WHATSAPP_WEBHOOK_VERIFY_TOKEN=bharat_crm_webhook_token

# Authentication Configuration
# JWT Secret - Generate a secure random string for production
JWT_SECRET=your_jwt_secret_key_change_in_production

# Google OAuth Configuration (for user authentication)
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_AUTH_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Google Calendar API Configuration
# Uses the same Google OAuth credentials above
GOOGLE_REDIRECT_URI=http://localhost:8080/calendar/callback

# Email Configuration (Gmail OAuth2)
# Get Gmail refresh token from OAuth2 Playground: https://developers.google.com/oauthplayground
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_REDIRECT_URI=https://developers.google.com/oauthplayground

# Frontend URL for email links
FRONTEND_URL=http://localhost:8080

# OpenAI Configuration (for AI WhatsApp Assistant)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Options: gpt-4, gpt-4o, gpt-4o-mini (recommended for cost-effectiveness), gpt-3.5-turbo

# AI Feature Control
# Set to 'false' to disable AI assistant completely across the platform
ENABLE_AI_FEATURE=true

# Owner Email (for appointment bookings from AI assistant)
OWNER_EMAIL=siddartha1192@gmail.com
