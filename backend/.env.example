# Database Connection
DATABASE_URL="postgresql://username:password@localhost:5432/bharat_crm?schema=public"

# Server Port
PORT=3001

# WhatsApp Business API Configuration
# Get these from Meta Business Suite: https://business.facebook.com
WHATSAPP_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id

# WhatsApp Webhook Configuration
# Set any secure random string - you'll need this when configuring webhook in Meta
WHATSAPP_WEBHOOK_VERIFY_TOKEN=bharat_crm_webhook_token

# Authentication Configuration
# JWT Secret - Generate a secure random string for production
JWT_SECRET=your_jwt_secret_key_change_in_production

# Google OAuth Configuration (for user authentication)
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_AUTH_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Google Calendar API Configuration
# Uses the same Google OAuth credentials above
GOOGLE_REDIRECT_URI=http://localhost:8080/calendar/callback

# Email Configuration (Gmail OAuth2)
# Get Gmail refresh token from OAuth2 Playground: https://developers.google.com/oauthplayground
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_REDIRECT_URI=https://developers.google.com/oauthplayground

# Frontend URL for email links
FRONTEND_URL=http://localhost:8080

# OpenAI Configuration (for AI Assistants)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Options: gpt-4, gpt-4o, gpt-4o-mini (recommended for cost-effectiveness), gpt-3.5-turbo

# AI Feature Control
# Set to 'false' to disable AI assistant completely across the platform
ENABLE_AI_FEATURE=true

# Owner Email (for appointment bookings from AI assistant)
OWNER_EMAIL=siddartha1192@gmail.com

# ========================================
# ENTERPRISE AI CONFIGURATION
# ========================================

# Vector Database Configuration (Qdrant Cloud - REQUIRED)
#
# Sign up for FREE at: https://cloud.qdrant.io/
# Free Tier: 1GB storage, unlimited requests, no credit card required
#
# Setup Steps (2 minutes):
# 1. Go to https://cloud.qdrant.io/ and sign up
# 2. Create a free cluster
# 3. Copy your cluster URL (looks like: https://xyz.region.cloud.qdrant.io:6333)
# 4. Copy your API key from the dashboard
#
# Example configuration:
# QDRANT_URL=https://xyz-abc.eu-central.aws.cloud.qdrant.io:6333
# QDRANT_API_KEY=qdrant_abc123xyz...
#
# See QDRANT_CLOUD_SETUP.md for detailed setup instructions
#
QDRANT_URL=https://your-cluster-url-here:6333
QDRANT_API_KEY=your_qdrant_api_key_here
VECTOR_COLLECTION_NAME=bharat_crm_knowledge

# AI Embedding Model (for vector database)
EMBEDDING_MODEL=text-embedding-3-small
# Options: text-embedding-3-small (cheaper), text-embedding-3-large (more accurate)

# WhatsApp AI Configuration
WHATSAPP_AI_MODEL=gpt-4o-mini
WHATSAPP_AI_TEMPERATURE=0.3
# Lower temperature (0.0-0.5) = More focused and deterministic
# Higher temperature (0.6-1.0) = More creative and varied

# Portal AI Configuration (Enterprise)
PORTAL_AI_MODEL=gpt-4o
PORTAL_AI_TEMPERATURE=0.7
PORTAL_AI_MAX_TOKENS=2000

# Product/Feature Information
COMPANY_NAME=Bharat CRM
COMPANY_DESCRIPTION=Complete Business Management Solution for Indian Businesses
PRODUCT_TAGLINE=Centralize all customer interactions, sales processes, and business communications

# Knowledge Base Documents Path
KNOWLEDGE_BASE_PATH=./knowledge_base
# Store your product docs, API docs, guides here

# AI Response Limits
MAX_CONTEXT_MESSAGES=10
# Number of previous messages to include in context

# Action Types (for structured WhatsApp responses)
ALLOWED_WHATSAPP_ACTIONS=create_appointment,create_task,create_lead,get_features
# Comma-separated list of actions WhatsApp AI can perform
